<h1>Listing events</h1>
 
<table>
  <tr>
    <th>Name</th>
  </tr>
 
  <% @event.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= link_to 'Destroy', event_path(event),
        	method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
     <%= link_to("Edit", {:controller => 'events',:action => 'edit'}) %>
    </tr>
  <% end %>
</table>