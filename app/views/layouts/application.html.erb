<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <style type="text/css">
      a[href="/newevent"]{
        padding: 5px 5px 5px 5px;
        border-radius: 5px;
        margin-left: 10px;
        color: black;
        font-size: 25px;
        text-decoration: none;
        background-color: rgba(200,200,200,0.8);
        font-family: Arial, Helvetica, sans-serif;
      }
      .calendar-heading{
        text-align: center;
        height: 40px;
      }
      .calendar-heading > a{
        padding: 5px 5px 5px 5px;

        border-radius: 5px;
        color: black;
        font-size: 20px;
        text-decoration: none;
        background-color: rgba(200,200,200,0.8);
        font-family: Arial, Helvetica, sans-serif;
      }
      .calendar-heading > span{
        padding: 5px 5px 5px 5px;
        color: black;
        font-size: 25px;
        text-decoration: none;
        font-family: Arial, Helvetica, sans-serif;
      }
    
    </style>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="banner">
      <%= link_to "AutoCalender (Logo for app goes here)", root_path, id: "logo" %>
      <% if check_logged_in %>
        <%= link_to "My Calendar", displayevents_path %>
        <%= link_to "My Profile", current_user %>
        <%= link_to "Settings", edit_user_path(current_user) %>
        <%= link_to "Log Out", logout_path, method: :delete, id: "logOut" %>
      <% end %>
    </div>
    <h1>Calendar</h1>
    <div id="map"></div>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDWTEfQsPN2d_kg8ST-ReFixdVCCIJrrlI&callback=initMap" ></script>
    <script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 49.252612, lng: -123.122183},
          zoom: 12
        });
      }

      function addMarker(coords){
        var marker = new google.maps.Marker({
          position: coords,
          map: map
        });
      }
      
    </script>

      <%= yield %>
  </body>
</html>
